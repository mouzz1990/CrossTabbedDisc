<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage 
    x:TypeArguments="viewModels:Tab2ViewModel"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:viewModels="clr-namespace:MvvmCrossTabbed.ViewModels"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MvvmCrossTabbed.Pages.Tab2View">
    <views:MvxContentPage.Content>
        <StackLayout>
            <Label Text="{Binding VMTitle}"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Button
                VerticalOptions="End"
                HorizontalOptions="Center"
                Text="Navigate to 2-1"
                Command="{Binding NavigateTo11Command}"
                />
        </StackLayout>
    </views:MvxContentPage.Content>
</views:MvxContentPage>